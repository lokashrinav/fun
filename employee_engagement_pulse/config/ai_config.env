# AI Configuration for Enhanced Sentiment Analysis
# Copy this to .env and configure your preferred AI provider

# AI Provider Selection
# Options: openai, anthropic, huggingface
AI_PROVIDER=openai

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
AI_MODEL=gpt-3.5-turbo  # or gpt-4 for better accuracy

# Anthropic Configuration (alternative)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
# AI_MODEL=claude-3-sonnet-20240229

# Hugging Face Configuration (free alternative)
HF_MODEL=cardiffnlp/twitter-roberta-base-sentiment-latest
# Alternative models:
# - microsoft/DialoGPT-medium
# - facebook/blenderbot-400M-distill
# - nlptown/bert-base-multilingual-uncased-sentiment

# AI Analysis Settings
AI_TEMPERATURE=0.1  # Lower = more consistent results
AI_MAX_TOKENS=200   # Response length limit
AI_TIMEOUT=30       # Request timeout in seconds

# Fallback Settings
USE_FALLBACK=true   # Fall back to VADER if AI fails
CACHE_AI_RESULTS=true  # Cache results to reduce API costs
